{% extends 'base.html.twig' %}

{% block title %}Mes inscriptions{% endblock %}

{% block body %}

    <h1>Liste de mes inscriptions:</h1>

    {% if userRegistrationsList.empty %}
        <h1>Vous n'êtes inscrit à aucune sortie !</h1>
    {% endif %}
    {% for eventRegistered in userRegistrationsList %}


        <div class="card text-center mb-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ eventRegistered.name }}</h5>
                <p class="card-text">{{ eventRegistered.description }}</p>
                <a href="{{ path('event_details',{"id":eventRegistered.id}) }}" class="btn btn-primary">Afficher </a>
            </div>
        </div>


    {% endfor %}




{% endblock %}
