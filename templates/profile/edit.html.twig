{% extends 'base.html.twig' %}
{% block title %}Modifier le profil{% endblock %}
{% block body %}
    <h1>Modifier le profil</h1>
    {{ form_start(form) }}
    {{ form_row(form.lastName) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password, {'attr': {'autocomplete': 'new-password'}}) }}
    {{ form_row(form.save) }}
    {{ form_end(form) }}
{% endblock %}