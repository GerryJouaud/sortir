{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <style>
        .error {
            color: #5a5c69;
            font-size: 7rem;
            position: relative;
            line-height: 1;
            width: 12.5rem;
        }
        .ml-auto, .mx-auto {
            margin-left: auto !important;
        }
        .mr-auto, .mx-auto {
            margin-right: auto !important;
        }
        #error {
            background-image: url('{{ asset('assets/images/logo.png') }}');
            background-size: cover;
            background-position: center;
        }
    </style>

    <!-- Begin Page Content -->
    <div class="container-fluid" id="error">
        <!-- 404 Error Text -->
        <div class="text-center">
            <div class="error mx-auto" data-text="404">{{ asset('assets/images/logo.png') }}</div>
            <p class="lead text-gray-800 mb-5">Page non trouvée</p>
            <p class="text-gray-500 mb-0">Il semble que vous ayez trouvé une faille dans la matrice...</p>
            <a href="{{ path('event_list') }}">&larr; Retour à la page événement</a>
        </div>
    </div>
{% endblock %}
